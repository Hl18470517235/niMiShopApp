page{background-color:#f5f5f5!important;}
.searchGood .search{margin-top:20rpx;padding:0 30rpx;}
.searchGood .search .input{width:542rpx;background-color:white;border-radius:30rpx;text-align:left;box-sizing:border-box;height:60rpx;}
.searchGood .search .input input{width:460rpx;font-size:28rpx;}
.searchGood .search .input .placeholder{color:#bbb;}
.searchGood .search .input .iconfont{color:#000;font-size:28rpx;margin-left:20rpx;}
.searchGood .search .cart{position: relative;width: 78rpx;}
.searchGood .search .cart .i{width: 48rpx;height: 48rpx;}
.searchGood .search .num {font-size:24rpx;padding:0 8rpx;background-color: #F81B27;border-radius: 16rpx; color: white; position: absolute;top:-10rpx;right:10rpx;}
.searchGood .search .bnt{width:120rpx;text-align:center;height:66rpx;line-height:66rpx;font-size:28rpx;color:white;border-radius: 33rpx;}
.searchGood .history {width:712rpx; min-height: 220rpx;margin:20rpx auto;background-color: white; border-radius: 20rpx;padding:28rpx 40rpx;}
.searchGood .history .title {font-size: 32rpx; color: #101010; line-height: 40rpx; height:40rpx;position: relative; padding-left: 45rpx;}
.searchGood .history .icon{width:40rpx; height:40rpx;position: absolute; top:0rpx; left: 0;}
.searchGood .history .list{margin-top:46rpx;}
.searchGood .history .list .item{background-color: #B0B1BB; color:#101010; font-size:24rpx; border-radius: 30rpx; padding:0 32rpx;margin: 0 16rpx 16rpx 0;}

.searchGood .wrapper .newProducts{white-space:nowrap;padding:16rpx;margin:16rpx;background-color: white;}
.searchGood .wrapper .newProducts .item{display:inline-block;width:212rpx;}
.searchGood .wrapper .newProducts .item .img-box{width:180rpx;height:180rpx;}
.searchGood .wrapper .newProducts .item .img-box image{width:100%;height:100%;border-radius:10rpx;}
.searchGood .wrapper .newProducts .item .pro-info{font-size:26rpx;color:#101010;text-align:left;height:60rpx;line-height:30rpx;margin:16rpx;word-wrap:break-word;text-overflow: ellipsis;white-space: normal;}
.searchGood .wrapper .newProducts .item .line2 {font-size:20rpx;color:#F5222d;}
.searchGood .wrapper .newProducts .item .line2 text{border:1px solid #F5222d;height:30rpx;line-height:30rpx;border-radius: 15rpx;display: inline-block; padding: 0 10rpx;}
.searchGood .wrapper .newProducts .item .money{padding:10rpx 10rpx 10rpx 0;text-align:left;font-size:28rpx;}
.searchGood .wrapper .newProducts .item .mold{text-decoration: line-through;font-size:24rpx;}
