.my-order .nav{width:100%;height:100rpx;position: fixed;left:0;top:0}
.my-order .nav .item{text-align:center;color:white;padding:32rpx 0;}
.my-order .nav .item.on{font-weight:bold;}
.my-order .list{width:694rpx;margin:110rpx auto 0;}
.my-order .list .item{background-color:#fff;border-radius:20rpx;margin-top:24rpx;box-shadow: 0rpx 2rpx 6rpx rgba(0,0,0,0.2)}
.my-order .list .item .title{height:84rpx;padding:0 30rpx;font-size:28rpx;color:#101010;}
.my-order .list .item .title .name{font-size: 28rpx;font-weight:bold;}
.my-order .list .item .item-info{padding:0 30rpx;margin-top:24rpx;}
.my-order .list .item .item-info .pictrue{width:120rpx;height:120rpx;}
.my-order .list .item .item-info .pictrue image{width:100%;height:100%;border-radius:6rpx;}
.my-order .list .item .item-info .text{width:486rpx;font-size:24rpx;color:#999;margin-top:6rpx;}
.my-order .list .item .item-info .text .name{width:346rpx;color:#282828;}
.my-order .list .item .item-info .text .spec{color:#919191;font-size:24rpx;}
.my-order .list .item .item-info .text .money{text-align:right;}
.my-order .list .item .item-info .text .money .btn{width:120rpx;height:40rpx;line-height:40rpx;color:white;text-align:center;border-radius:20rpx;font-size:24rpx;}
.my-order .list .noMore{color:#919191;text-align:center;font-size:20rpx;margin:32rpx auto;}

.my-order .list .item .afterSales{font-size:24rpx;color:#282828;margin:30rpx 0 0 0;}
.my-order .list .item .afterSales .title-0{color:#000;text-align:left;margin-left:30rpx;}
.my-order .list .item .afterSales .title-1{color:#919191;margin-left:16rpx;}
.my-order .list .item .afterSales .title-2{color:#F95502;float:right;text-align:right;margin-right:30rpx;}

.my-order .list .item .totalPrice{font-size:28rpx;color:#282828;text-align:right;margin:27rpx 0 0 30rpx;padding:0 30rpx 0 0;}
.my-order .list .item .totalPrice .money{color:#F95502;font-size:28rpx;font-weight:bold;}
.my-order .list .item .bottom{height:104rpx;padding:0 30rpx;}
.my-order .list .item .bottom .bnt{width:160rpx;height:48rpx;text-align:center;line-height:46rpx;color:#000;border-radius:24rpx;font-size:28rpx;}
.my-order .list .item .bottom .bnt.border-color{color:#F95502;border:1rpx solid #ddd;}
.my-order .list .item .bottom .bnt.cancelBnt{border:1rpx solid #ddd;color:#aaa;}
.my-order .list .item .bottom .bnt.bnt-code{color:#F9591D; font-size:28rpx; border:2rpx solid #F9591D;}
.my-order .list .item .bottom .bnt~.bnt{margin-left:17rpx;}
 .noCart{margin-top:171rpx;padding-top: 0.1rpx;}
 .noCart .pictrue{width:347rpx;height:280rpx;margin:78rpx auto 56rpx auto;}
 .noCart .pictrue image{width:100%;height:100%;}
