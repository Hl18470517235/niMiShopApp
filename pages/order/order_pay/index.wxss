#mas {
  position: fixed;
  z-index: 9999;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  background-color: rgba(8, 8, 8, 0.384);
}
#masModel{
  position: fixed;
  z-index: 99999;
  top: 40%;
  left: 20%;
  right: 20%;
  bottom: 40%rpx;
  height: 300rpx;
  box-sizing: border-box;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  text-align: center;
}
#masModel .text {
  margin-top: 48rpx;
  margin-bottom: 60rpx;
}
#masModel .btn {
  padding: 8rpx 36rpx;
  background-color: #06B7A4;
  border-radius: 20rpx;
  color: #fff;
}


