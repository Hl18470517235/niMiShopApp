@import '/app.wxss';
.butie-window{position:fixed;bottom:0;width:100%;left:0;background-color:#fff;z-index:88;border-radius:16rpx 16rpx 0 0;padding-bottom:140rpx;transform:translate3d(0,100%,0);transition:all .3s cubic-bezier(.25,.5,.5,.9);}
.butie-window.on{transform:translate3d(0,0,0);}
.butie-window .textpic{padding:0 30rpx;margin-top:29rpx;position:relative;font-size:24rpx;}
.butie-window .textpic .l1 {font-size: 32rpx;text-align: center;margin-bottom: 100rpx;}
.butie-window .textpic .l2 {margin: 40rpx 0}
.butie-window .textpic .l4{margin: 50rpx 0}
.butie-window .textpic .l5{color:#EC5834;margin-bottom: 80rpx;}
.butie-window .textpic .close{position:absolute;right:30rpx;top:-5rpx;width:48rpx;height:48rpx;}
.butie-window .textpic .close image{width:100%;height:100%;}


